{
  "default_base_branch": "develop",
  "base_branch_candidates": ["develop", "main", "master"],
  "allow_pattern_candidates": ["release/.*", "hotfix/.*"],
  "branch_prefix": {
    "FEAT": "feat",
    "FIX": "fix",
    "REFACTOR": "refactor",
    "CHORE": "chore",
    "RFC": "rfc"
  },
  "worktree": {
    "enabled": true,
    "root_dir": ".worktrees"
  },
  "commit": {
    "type_detection": "auto",
    "default_type": "feat"
  },
  "verify": {
    "test": "npm test",
    "build": "npm run build",
    "lint": "npm run lint"
  },
  "jira": {
    "project": "PROJ",
    "domain": "your-company.atlassian.net"
  },
  "batch": {
    "dependency_patterns": [
      "depends on #(\\d+)",
      "blocked by #(\\d+)",
      "requires ([A-Z]+-\\d+)",
      "after: ([A-Z]+-\\d+-\\w+)"
    ],
    "sources": [
      {"type": "github", "query": "label:scheduled"}
    ]
  }
}
